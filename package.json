  "scripts": {
    "test": "npm-run-all lint unit-test",
    "dev": "npm-run-all tokens watch:dev",
    "prod": "npm-run-all tokens sass:prod",
    "lint": "ts-standard",
    "unit-test": "mocha",
    "tokens": "node token-compiler.js",
    "watch:dev": "npm-run-all -p sass:dev html:dev",
    "html:dev": "browser-sync start --server --files \"*.html,css/*.css\"",
    "sass:dev": "sass --watch --update --style=expanded scss:css",
    "sass:prod": "sass --no-source-map --style=compressed scss:css"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "browser-sync": "^2.29.3",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "rfdc": "^1.3.0",
    "sass": "^1.63.6",
    "slugify": "^1.6.6",
    "ts-node": "^10.9.1",
    "ts-standard": "^12.0.2",
    "typescript": "^5.1.6",
    "yaml": "^2.3.1"
  }
