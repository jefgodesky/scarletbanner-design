{
  "name": "scarletbanner-design",
  "version": "1.0.0",
  "description": "The design system for the Scarlet Banner.",
  "type": "module",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jefgodesky/scarletbanner-design.git"
  },
  "homepage": "https://design.scarletbanner.com",
  "bugs": {
    "url": "https://github.com/jefgodesky/scarletbanner-design/issues"
  },
  "author": {
    "name": "Jason Godesky",
    "email": "jason@godesky.net",
    "url": "https://jason.godesky.net"
  },
  "license": "GPL-3.0-only",
  "scripts": {
    "test": "npm-run-all lint unit-test",
    "dev": "npm-run-all tokens watch:dev",
    "prod": "npm-run-all tokens sass:prod js:prod release",
    "lint": "ts-standard",
    "unit-test": "mocha --experimental-specifier-resolution=node",
    "tokens": "npm-run-all tokens:adddoc tokens:compile",
    "tokens:compile": "design-tokenizer --file tokens.json --scss --add-dictionary add-doc.json --html-src docs --html-dist .",
    "tokens:adddoc": "node --loader ts-node/esm generate-add-doc.ts",
    "watch:dev": "npm-run-all -p sass:dev server:dev html:dev token:dev js:dev",
    "token:dev": "chokidar \"./tokens.json\" -c \"npm run tokens\"",
    "html:dev": "chokidar \"./docs/*.html\" -c \"npm run tokens\"",
    "server:dev": "browser-sync start --server --files \"*.html,stylesheets/dist/*.css,scripts/dist/*.js\"",
    "sass:dev": "sass --watch --update --style=expanded stylesheets/src:stylesheets/dist",
    "sass:prod": "sass --no-source-map --style=compressed stylesheets/src:stylesheets/dist",
    "presass:prod": "NODE_OPTIONS=\"--loader ts-node/esm\" ts-node release/pre-sass-prod.ts",
    "postsass:prod": "NODE_OPTIONS=\"--loader ts-node/esm\" ts-node release/post-sass-prod.ts",
    "js:dev": "NODE_OPTIONS=\"--loader ts-node/esm\" webpack --watch --mode development",
    "js:prod": "NODE_OPTIONS=\"--loader ts-node/esm\" webpack --stats-error-details --mode production",
    "release": "NODE_OPTIONS=\"--loader ts-node/esm\" ts-node release/copy.ts"
  },
  "pre-commit": [
    "test",
    "prod"
  ],
  "dependencies": {
    "design-tokenizer": "^0.3.0",
    "es6-promise": "^4.2.8",
    "prismjs": "^1.29.0",
    "suncalc": "^1.9.0",
    "unobtrusive-dom": "^0.2.1"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/jsdom-global": "^3.0.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.8.3",
    "@types/prismjs": "^1.26.0",
    "@types/sinon": "^10.0.15",
    "@types/suncalc": "^1.9.0",
    "@types/webpack": "^5.28.3",
    "browser-sync": "^2.29.3",
    "chai": "^4.3.7",
    "chokidar-cli": "^3.0.0",
    "jsdom-global": "^3.0.2",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "pre-commit": "^1.2.2",
    "sass": "^1.63.6",
    "sinon": "^15.2.0",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "ts-standard": "^12.0.2",
    "typescript": "^5.1.6",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4"
  }
}
