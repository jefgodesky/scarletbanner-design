  "scripts": {
    "dev": "npm-run-all -p sass:dev html:dev",
    "html:dev": "browser-sync start --server --files \"*.html,css/*.css\"",
    "sass:dev": "sass --watch --update --style=expanded scss:css",
    "sass:prod": "sass --no-source-map --style=compressed scss:css"
  },
  "devDependencies": {
    "browser-sync": "^2.29.3",
    "npm-run-all": "^4.1.5",
    "sass": "^1.63.6",
    "yaml": "^2.3.1"
  }
