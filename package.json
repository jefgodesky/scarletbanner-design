{
  "name": "scarletbanner-design",
  "version": "1.0.0",
  "description": "The design system for the Scarlet Banner.",
  "type": "module",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jefgodesky/scarletbanner-design.git"
  },
  "homepage": "https://design.scarletbanner.com",
  "bugs": {
    "url": "https://github.com/jefgodesky/scarletbanner-design/issues"
  },
  "author": {
    "name": "Jason Godesky",
    "email": "jason@godesky.net",
    "url": "https://jason.godesky.net"
  },
  "license": "GPL-3.0-only",
  "scripts": {
    "test": "npm-run-all lint unit-test",
    "dev": "npm-run-all tokens watch:dev",
    "prod": "npm-run-all tokens sass:prod js:prod",
    "lint": "ts-standard",
    "unit-test": "mocha",
    "tokens": "node --experimental-specifier-resolution=node --loader ts-node/esm ./compiler/index.ts",
    "watch:dev": "npm-run-all -p sass:dev server:dev html:dev token:dev js:dev",
    "token:dev": "watch \"npm run tokens\" tokens",
    "html:dev": "watch \"npm run tokens\" docs",
    "server:dev": "browser-sync start --server --files \"*.html,stylesheets/dist/*.css,scripts/dist/*.js\"",
    "sass:dev": "sass --watch --update --style=expanded stylesheets/src:stylesheets/dist",
    "sass:prod": "sass --no-source-map --style=compressed stylesheets/src:stylesheets/dist",
    "js:dev": "webpack --watch --mode development",
    "js:prod": "webpack --stats-error-details --mode production"
  },
  "pre-commit": [
    "test",
    "prod"
  ],
  "dependencies": {
    "es6-promise": "^4.2.8",
    "prismjs": "^1.29.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/jsdom-global": "^3.0.4",
    "@types/mocha": "^10.0.1",
    "@types/mock-fs": "^4.13.1",
    "@types/prismjs": "^1.26.0",
    "browser-sync": "^2.29.3",
    "chai": "^4.3.7",
    "colord": "^2.9.3",
    "jsdom-global": "^3.0.2",
    "mocha": "^10.2.0",
    "mock-fs": "^5.2.0",
    "npm-run-all": "^4.1.5",
    "pre-commit": "^1.2.2",
    "rfdc": "^1.3.0",
    "sass": "^1.63.6",
    "slugify": "^1.6.6",
    "ts-loader": "^9.4.4",
    "ts-node": "^10.9.1",
    "ts-standard": "^12.0.2",
    "typescript": "^5.1.6",
    "watch": "^1.0.2",
    "webpack": "^5.88.1",
    "webpack-cli": "^5.1.4",
    "yaml": "^2.3.1"
  }
}
